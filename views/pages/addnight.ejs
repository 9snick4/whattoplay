<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
    <script type="text/javascript">
    function insertNight() {
        $.post("/insertNight", {
            nightname: $("#nightname").val(),
            hostname: $("#hostname").val(),
            hostusername: $("#hostusername").val(),
            day: $("#day").val(),
        })
        .done(function() {
            $(location).attr('href','/getList?insert=y');
        })
        .fail(function(err) {
            $("#error").text(err.responseText);
        })
    }
    </script>
</head>

<body>

<% include ../partials/nav.ejs %>

<div class="container">
    <h2>Add night</h2>
    <div class="form">
        <div class="form-group row">
            <label for="nightname">Night name</label>
            <input class="form-control" type="text" name="nightname" id="nightname">
        </div>
        <div class="form-group row">
            <label for="hostname">Host name</label>
            <input class="form-control" type="text" name="hostname" id="hostname">
        </div>
        <div class="form-group row">
            <label for="hostusername">Host Username on BGG</label>
            <input class="form-control" type="text" name="hostunsername" id="hostusername">
        </div>
        <div class="form-group row">
            <label for="date">Date</label>
            <input class="form-control" type="datetime-local" id="day">
        </div>
        <div class="form-group row">
               
            <input class="form-control btn-primary" type="button" value="Create" onclick="insertNight()">
        </div>
    </div>
    <div class="error-message" id="error">

    </div>
</div>

</body>
</html>